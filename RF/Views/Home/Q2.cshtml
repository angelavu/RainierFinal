@* The @model directive provides a cleaner and more concise way to reference
    strongly-typed models from view files.*@
@model IEnumerable<hw7.VGSales_Table>

@{
    ViewBag.Title = "Q2";
}

@{
    string modelinfo = Model.ToString();
}
<h2>@ViewBag.Message</h2>

<table class="table">
    <tr>
        <th>Platform</th>
        <th>Title</th>
        <th>Global Sales</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Platform)</td>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Global_Sales)</td>
        </tr>
    }
    <tr>
        <td><i>* Sales are in the millions</i></td>
    </tr>
</table>

